
<div class="row">
    <div class="col-md-8">
        <h4>Cevaplar</h4>
        <a href="/Questions">Sorular</a> | <span id="catName"></span>
        <table class="table" id="tbAnswerList">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Cevap</th>
                    <th>Durumu</th>
                    <th>Kayıt T.</th>
                    <th>Düzenleme T.</th>
                    <th>İşlemler</th>
                </tr>
            </thead>

            <tbody>
            </tbody>
        </table>

    </div>

    <div class="col-md-4">
        <h4 id="editHeader">Cevap Ekle</h4>

        <div class="b-2">
            <label>Cevap</label>
            <input type="text" class="form-control" id="txtName" />
            <input type="hidden" id="txtId" />
        </div>
        <div class="b-2">
            <label>Soru</label>
            <select class="form-select" id="cbQuestion">
            </select>

        </div>
        <div class="b-2">
            <input type="checkbox" class="form-check-inline" id="cbIsActive" />
            <label>Cevaplandı</label>
        </div>
        <div class="mb-2">
            <button class="btn btn-outline-primary btn-sm" id="btnSave">Kaydet</button>
            <button class="btn btn-outline-primary btn-sm" id="btnEdit">Düzenle</button>
            <button class="btn btn-outline-danger btn-sm" id="btnDelete">Sil</button>
            <button class="btn btn-outline-secondary btn-sm" id="btnCancel">Vazgeç</button>
        </div>

        <div id="result"></div>

    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var ApiBaseUrl = "@ViewBag.ApiBaseUrl";
            var catId = "@ViewBag.CatId";
            AnswerList();
            QuestionList();
            QuestionById();
            $("#btnEdit").hide();
            $("#btnDelete").hide();


            function QuestionList() {
                $.ajax({
                    url: ApiBaseUrl + "Questions",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        var opt = "";
                        $("#cbQuestion").empty();
                        $.each(data, function (i, item) {

                            if (catId == item.id) {
                                opt = '<option value="' + item.id + '" selected>' + item.content + '</option>';
                            } else {
                                opt = '<option value="' + item.id + '">' + item.content + '</option>';
                            }

                            $("#cbQuestion").append(opt);
                        });

                    },
                    error: function () { }
                });
            }
            function QuestionById() {
                $.ajax({
                    url: ApiBaseUrl + "Questions/" + catId,
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        $("#catName").html("<b>" + data.content + "<b>");
                    },
                    error: function () { }
                });
            }
            function AnswerList() {
                $.ajax({
                    url: ApiBaseUrl + "Questions/" + catId + "/Answers",
                    method: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    contentType: "application/json",
                    success: function (data) {
                        AnswerListToTable(data);
                    },
                    error: function () { }
                });
            }
            function AnswerListToTable(data) {
                $("#tbAnswerList tbody").empty();
                var tr = '';
                $.each(data, function (i, item) {
                    var bg = item.isActive ? 'bg-success' : 'bg-danger';

                    tr += '<tr><td>' + item.id + '</td><td>' + item.content + '</td><td>' + item.price + '</td><td><span class="badge ' + bg + '">' + (item.isActive ? 'Cevaplandı' : 'Cevaplanmadı') + '</span></td><td>' + FormatDate(item.created) + '</td><td>' + FormatDate(item.updated) + '</td><td><button class="btn btn-outline-primary btn-sm edit" id=' + item.id + '>Düzenle</td></tr>'
                });

                $("#tbAnswerList tbody").append(tr);
            }
            function FormatDate(d) {
                var date = new Date(d);
                var day = date.getDate() > 9 ? date.getDate() : '0' + date.getDate();
                var mount = date.getMonth() > 9 ? date.getMonth() : '0' + date.getMonth();
                var year = date.getFullYear();

                var hour = date.getHours() > 9 ? date.getHours() : '0' + date.getHours();
                var minute = date.getMinutes() > 9 ? date.getMinutes() : '0' + date.getMinutes();
                var second = date.getSeconds() > 9 ? date.getSeconds() : '0' + date.getSeconds();

                var fd = day + "." + mount + "." + year + " " + hour + ":" + minute + ":" + second;
                return fd
            }


            $("#btnSave").click(function () {
                var content = $("#txtName").val();
                
                var questionId = $("#cbQuestion").val();
                var isActive = $("#cbIsActive").is(":checked");
                var answer = new Object();
                answer.Content = content;
                
                answer.QuestionId = questionId;
                answer.IsActive = isActive;

                $.ajax({
                    url: ApiBaseUrl + "Answers",
                    method: "POST",
                    data: JSON.stringify(answer),
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            AnswerList();
                        }
                        else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function () { }
                });

            });
            $(document).on("click", ".edit", function () {
                var id = $(this).attr("id");
                $.ajax({
                    url: ApiBaseUrl + "Answers/" + id,
                    method: "GET",
                    contentType: "application/json",
                    success: function (data) {
                        $("#txtId").val(data.id);
                        $("#txtName").val(data.content);
                        $("#txtPrice").val(data.price);
                        $("#cbQuestion").val(data.questionId);
                        $("#cbIsActive").prop("checked", data.isActive);

                        $("#btnEdit").show();
                        $("#btnDelete").show();
                        $("#btnSave").hide();

                        $("#editHeader").html("Ürün Düzenle - Sil");
                    },
                    error: function () { }
                });


            });


            $("#btnCancel").click(function () {
                $("#txtId").val("");
                $("#txtName").val("");
                $("#cbIsActive").prop("checked", false);
                $("#btnEdit").hide();
                $("#btnDelete").hide();
                $("#btnSave").show();
                $("#editHeader").html("Ürün Ekle");

            });


            $("#btnEdit").click(function () {

                var id = $("#txtId").val();
                var content = $("#txtName").val();
                var price = $("#txtPrice").val();
                var questionId = $("#cbQuestion").val();
                var isActive = $("#cbIsActive").is(":checked");
                var answer = new Object();
                answer.Id = id;
                answer.Content = content;
                answer.Price = price;
                answer.questionId = questionId;
                answer.IsActive = isActive;

                $.ajax({
                    url: ApiBaseUrl + "Answers",
                    method: "PUT",
                    data: JSON.stringify(answer),
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            AnswerList();
                        }
                        else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function () { }
                });


            });

            $("#btnDelete").click(function () {
                console.log("sil");
                var id = $("#txtId").val();
                $.ajax({
                    url: ApiBaseUrl + "Answers/" + id,
                    method: "DELETE",
                    contentType: "application/json",
                    success: function (data) {
                        $("#result").show();
                        if (data.status) {
                            $("#result").removeClass().addClass("alert alert-success");
                            AnswerList();
                        }
                        else {
                            $("#result").removeClass().addClass("alert alert-danger");
                        }
                        $("#result").html(data.message);
                        $("#result").fadeOut(3000);
                    },
                    error: function () { }
                });


            });
        });
    </script>
}